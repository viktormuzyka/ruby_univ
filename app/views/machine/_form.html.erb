<%= form_for @machine, :html => { :class => "form-horizontal machine" } do |f| %>

  <% if @machine.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@machine.errors.count, "error") %> prohibited this machine from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @machine.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :standby, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :standby, :class => 'form-control' %>
    </div>
    <%=f.error_span(:standby) %>
  </div>
  <div class="form-group">
    <%= f.label :work_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :work_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:work_time) %>
  </div>


  <div>
    <%= f.submit %>
  </div>

<% end %>
